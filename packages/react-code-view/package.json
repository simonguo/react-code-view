{
  "name": "react-code-view",
  "version": "3.0.0",
  "description": "A React component for rendering code with live preview and syntax highlighting",
  "license": "MIT",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles": "./styles/index.css",
    "./styles/highlight": "./styles/highlight.css"
  },
  "files": [
    "dist",
    "styles"
  ],
  "keywords": [
    "react",
    "code",
    "view",
    "preview",
    "markdown",
    "syntax-highlighting",
    "live-code",
    "component"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/simonguo/react-code-view.git",
    "directory": "packages/react-code-view"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@react-code-view/core": "workspace:*",
    "@react-code-view/react": "workspace:*"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  }
}
