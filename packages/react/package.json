{
  "name": "@react-code-view/react",
  "version": "3.0.0",
  "description": "React components for rendering code with live preview",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./styles": "./styles/index.css",
    "./styles/*": "./styles/*"
  },
  "files": [
    "dist",
    "styles",
    "README.md"
  ],
  "sideEffects": [
    "*.css",
    "*.less"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@react-code-view/core": "workspace:*",
    "@codemirror/state": "^6.4.1",
    "@codemirror/view": "^6.34.3",
    "@codemirror/commands": "^6.7.1",
    "@codemirror/language": "^6.10.4",
    "@codemirror/search": "^6.5.8",
    "@codemirror/autocomplete": "^6.18.3",
    "@codemirror/lint": "^6.8.3",
    "@codemirror/lang-javascript": "^6.2.2",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/lang-json": "^6.0.1",
    "@codemirror/lang-markdown": "^6.3.1",
    "@codemirror/theme-one-dark": "^6.1.2",
    "classnames": "^2.5.0",
    "copy-to-clipboard": "^3.3.3",
    "sucrase": "^3.35.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.0.0",
    "@types/codemirror": "^5.60.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "cssnano": "^6.0.0",
    "gulp": "^4.0.0",
    "gulp-less": "^5.0.0",
    "gulp-postcss": "^10.0.0",
    "jsdom": "^23.0.0",
    "less": "^4.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "react": ">=17.0.0",
    "react-dom": ">=17.0.0"
  },
  "keywords": [
    "react",
    "code-view",
    "markdown",
    "preview",
    "live-editor"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/simonguo/react-code-view.git",
    "directory": "packages/react"
  },
  "publishConfig": {
    "access": "public"
  }
}
