{
  "name": "@react-code-view/core",
  "version": "3.0.1",
  "description": "Core markdown transformation utilities for react-code-view",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "shiki": "^1.22.2",
    "marked": "^12.0.0"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0",
    "rimraf": "^5.0.0"
  },
  "keywords": [
    "markdown",
    "transform",
    "highlight",
    "code"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/simonguo/react-code-view.git",
    "directory": "packages/core"
  },
  "publishConfig": {
    "access": "public"
  }
}
